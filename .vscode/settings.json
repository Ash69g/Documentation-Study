{
  // ربط CSS للمعاينة (اختياري لو كنت تستخدمه)

  // اربط الـ CSS بالمعاينة
  "markdown.styles": [
    ".vscode/tables.css"
  ],

  // للسماح بـ <br> كسطر جديد داخل المعاينة
  "markdown.preview.breaks": true,


  // تفعيل المدقق ودعم العربية والإنجليزية
  "cSpell.enabled": true,
  "cSpell.language": "en,ar",

  // كلمات مخصصة (ضع قائمتك هنا)
  "cSpell.userWords": [
    "Alshaif",
    "Firestore",
    "Mermaid",
    "NFRs",
    "KSA",
    "Yemen",
    "Lucidchart",
    "usecase",
    "subcollections",
    "rollouts",
    "ABAC",
    "CA",
    "Admin",
    "عبدالله",
    "الوساطة",
    "المشتريات",
    "الشحن",
    "التدقيق",
    "الموثوقة"
  ],

  // تقليل الإزعاج في التنبيهات
  "cSpell.diagnosticLevel": "Hint",

  // تجاهل مسارات لا داعي لفحصها
  "cSpell.ignorePaths": [
    "**/node_modules/**",
    "**/.git/**",
    "**/dist/**",
    ".vscode/tables.css"
  ],

  // المعرّفات (لغات الملفات) المراد فحصها
  "cSpell.enabledFileTypes": {
    "markdown": true,
    "plaintext": true,
    "yaml": true,
    "json": true
  },

  // السماح بالكلمات المركّبة
  "cSpell.allowCompoundWords": true
}
